<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--充满一行的按钮-->
    <style name="StyleBtnFullLine">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>

    <!--长按钮-->
    <style name="StyleBtnLong" parent="StyleBtnFullLine">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <!--中等长度按钮-->
    <style name="StyleBtnMedium">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingStart">60dp</item>
        <item name="android:paddingEnd">60dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>

    <!--短按钮-->
    <style name="StyleBtnShort">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">36dp</item>
        <item name="android:paddingEnd">36dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>

</resources>