<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.vclusters.cloud.main.home.phone.widget.CloudPhoneTitleBar
        android:id="@+id/main_phone_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/common_page_edge"
        android:paddingTop="10dp"
        android:paddingEnd="0dp"
        android:paddingBottom="10dp"
        app:tabs="@array/main_phone_tabs" />

    <FrameLayout
        android:id="@+id/main_fl_phone_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>