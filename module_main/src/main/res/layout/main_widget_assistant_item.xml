<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rect_white_round10"
    android:backgroundTint="@color/color_sel_white"
    android:paddingStart="5dp"
    android:paddingTop="12dp"
    android:paddingEnd="15dp"
    android:paddingBottom="12sp">

    <ImageView
        android:id="@+id/main_iv_feature_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main_icon_assistant_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/main_tv_feature_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_level2"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/main_tv_feature_desc"
        app:layout_constraintLeft_toRightOf="@id/main_iv_feature_icon"
        app:layout_constraintTop_toTopOf="@id/main_iv_feature_icon"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/main_tv_feature_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_level4"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/main_iv_feature_icon"
        app:layout_constraintLeft_toRightOf="@id/main_iv_feature_icon"
        app:layout_constraintTop_toBottomOf="@id/main_tv_feature_name"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/main_iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow_right_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <com.kyleduo.switchbutton.SwitchButton
        android:id="@+id/main_switch_feature"
        style="@style/Style_SwitchBtnDefault"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>