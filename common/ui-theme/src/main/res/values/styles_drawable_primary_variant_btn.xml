        <item name="dtv_text_color_normal">?app_color_text_variant1</item>
        <item name="dtv_text_color_disabled">?app_color_text_level2</item>
    </style>

    <style name="Widget.App.Button.Wrap.DView.PrimaryVariantRounded10">
        <item name="cdv_selector_appearance">@style/Widget.App.DView.Selector.PrimaryGradientVariantRounded10</item>
        <item name="dtv_text_color_normal">?app_color_text_variant1</item>
        <item name="dtv_text_color_disabled">?app_color_text_level2</item>
    </style>

    <style name="Widget.App.Button.Wrap.DView.PrimaryVariantRounded5">
        <item name="cdv_selector_appearance">@style/Widget.App.DView.Selector.PrimaryGradientVariantRounded5</item>
        <item name="dtv_text_color_normal">?app_color_text_variant1</item>
        <item name="dtv_text_color_disabled">?app_color_text_level2</item>
    </style>

</resources>