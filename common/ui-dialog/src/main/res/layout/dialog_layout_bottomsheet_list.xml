<?xml version="1.0" encoding="utf-8"?>
<com.android.base.ui.shape.ShapeableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_ll_bottomsheet_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:msd_backgroundColor_normal="?app_color_lightest"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.App.TopRounded10">

    <FrameLayout
        android:id="@+id/dialog_fl_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="@dimen/common_page_edge"
            android:paddingVertical="20dp"
            tools:text="Title" />

        <TextView
            android:id="@+id/dialog_tv_title_right_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:visibility="gone"
            tools:text="Action"
            tools:visibility="visible" />

        <View
            android:id="@+id/dialog_view_top_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_divider_width"
            android:layout_gravity="bottom"
            android:background="?app_color_divider" />

    </FrameLayout>

    <ViewStub
        android:id="@+id/dialog_stub_list_top_decorator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/dialog_cl_list_top_decorator"
        android:layout="@layout/dialog_layout_extension_stub" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_rv_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none" />

    <ViewStub
        android:id="@+id/dialog_stub_list_bottom_decorator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/dialog_cl_list_bottom_decorator"
        android:layout="@layout/dialog_layout_extension_stub" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <LinearLayout
        android:id="@+id/dialog_ll_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Space
            android:id="@+id/dialog_space_left"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <com.android.base.ui.drawable.DButton
            android:id="@+id/dialog_btn_bottom_left"
            style="@style/Widget.App.Button.Wrap.DView.PrimaryVariantRounded25"
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:text="@string/cancel" />

        <Space
            android:id="@+id/dialog_space_middle"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <com.android.base.ui.drawable.DButton
            android:id="@+id/dialog_btn_bottom_right"
            style="@style/Widget.App.Button.Wrap.DView.PrimaryGradientRounded25"
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:text="@string/confirm" />

        <Space
            android:id="@+id/dialog_space_right"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</com.android.base.ui.shape.ShapeableLinearLayout>