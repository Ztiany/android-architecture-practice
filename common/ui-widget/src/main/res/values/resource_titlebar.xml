<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AppTitleBar">
        <attr name="atbShowDivider" format="boolean" />
        <attr name="atbDividerColor" format="color|reference" />
    </declare-styleable>

    <style name="Widget.App.TitleBar" parent="">
        <item name="navigationIconTint">?app_color_deepest</item>
        <item name="titleTextColor">?app_color_text_level1</item>
        <item name="atbDividerColor">?app_color_divider</item>
        <item name="navigationIcon">@drawable/icon_back</item>
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Toolbar.Title</item>
        <item name="atbShowDivider">true</item>
        <item name="android:background">?app_color_lightest</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>