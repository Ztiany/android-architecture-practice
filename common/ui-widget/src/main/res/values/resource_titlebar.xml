<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AppTitleBar">
        <attr name="atb_title" format="string|reference" />
        <attr name="atb_title_color" format="color|reference" />
        <attr name="atb_title_centered" format="boolean" />
        <attr name="atb_navigation_icon" format="reference" />
        <attr name="atb_disable_navigation" format="boolean" />
        <attr name="atb_navigation_icon_tint" format="color|reference" />
        <attr name="atb_menu_id" format="reference" />
        <attr name="atb_show_divider" format="boolean" />
        <attr name="atb_divider_color" format="color|reference" />
        <attr name="atb_menu_color" format="color|reference" />
    </declare-styleable>

    <style name="Widget.App.TitleBar" parent="">
        <item name="android:elevation">0.5dp</item>
        <item name="atb_navigation_icon_tint">?app_color_deepest</item>
        <item name="atb_title_color">?app_color_text_level1</item>
        <item name="atb_title_centered">true</item>
        <item name="android:background">?app_color_lightest</item>
        <item name="atb_navigation_icon">@drawable/icon_back</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>