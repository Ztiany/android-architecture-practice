<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription">

    <FrameLayout
        android:id="@+id/account_fl_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:padding="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@drawable/icon_settings"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/account_view_notice"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="end"
            android:background="@drawable/shape_red_dot"
            android:visibility="invisible"
            tools:visibility="visible" />

    </FrameLayout>

    <ImageView
        android:id="@+id/account_iv_login_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/account_ic_login_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_fl_settings" />

    <ImageView
        android:id="@+id/account_iv_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/account_ic_login_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_iv_login_logo" />

    <TextView
        android:id="@+id/account_tv_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/account_label_padding"
        android:text="@string/account"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_iv_login_text" />

    <com.vclusters.cloud.account.widget.IconsEditText
        android:id="@+id/account_et_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/account_content_padding"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/account_content_padding"
        android:hint="@string/please_enter_account"
        android:paddingHorizontal="4dp"
        android:paddingBottom="20dp"
        android:textSize="14sp"
        app:iet_enable_content_clearable="true"
        app:iet_enable_tailing_icon="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_tv_phone_label" />

</androidx.constraintlayout.widget.ConstraintLayout>