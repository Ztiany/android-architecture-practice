<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sel_selectable_item_white_bg"
    android:paddingStart="@dimen/common_page_edge"
    android:paddingEnd="@dimen/common_page_edge"
    tools:ignore="ContentDescription">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/account_iv_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="12sp"
        android:layout_marginBottom="12sp"
        android:src="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/account_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/account_iv_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="188****9984" />

    <ImageView
        android:id="@+id/account_tv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>