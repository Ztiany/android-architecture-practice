<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <dimen name="account_label_padding">42dp</dimen>
    <dimen name="account_content_padding">40dp</dimen>

    <declare-styleable name="IconsEditText" tools:ignore="ResourceName">
        <attr name="iet_enable_tailing_icon" format="boolean" />
        <attr name="iet_enable_content_clearable" format="boolean" />
        <!--must be a bitmap-->
        <attr name="iet_tailing_off_drawable" format="reference" />
        <!--must be a bitmap-->
        <attr name="iet_tailing_on_drawable" format="reference" />
        <!--must be a bitmap-->
        <attr name="iet_clear_drawable" format="reference" />
    </declare-styleable>

    <style name="Account_StyleLoginEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/account_content_padding</item>
        <item name="android:layout_marginEnd">@dimen/account_content_padding</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="singleLine">true</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>