<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@id/base_retry_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/base_img_error"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@id/base_retry_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/base_retry_icon"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp"
        android:text="@string/page_error_server_error"
        android:textColor="@color/text_level3"
        android:textSize="14sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/base_retry_btn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/base_retry_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/page_error_retry_action_tips"
        android:textColor="@color/black" />

</RelativeLayout>