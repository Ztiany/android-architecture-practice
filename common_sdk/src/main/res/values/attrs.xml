<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CounterButton">
        <attr name="ccb_count" format="integer" />
        <attr name="ccb_text" format="string|reference" />
        <attr name="ccb_text_hint_format" format="string|reference" />
        <attr name="ccb_text_counting_color" format="color|reference" />
        <attr name="ccb_text_normal_color" format="color|reference" />
        <attr name="ccb_text_disable_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="AppTitleLayout">
        <attr name="atl_title" format="string|reference" />
        <attr name="atl_title_color" format="color|reference" />
        <attr name="atl_navigation_icon" format="reference" />
        <attr name="atl_disable_navigation" format="boolean" />
        <attr name="atl_navigation_icon_tint" format="color|reference" />
        <attr name="atl_menu_id" format="reference" />
        <attr name="atl_show_cutting_line" format="boolean" />
        <attr name="atl_adjust_for_status" format="boolean" />
        <attr name="atl_menu_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="SelectPhotosLayout">
        <attr name="spl_max_image_size" format="integer" />
    </declare-styleable>

    <declare-styleable name="TextItemLayout">
        <attr name="til_title" format="string|reference" />
        <attr name="til_title_color" format="color|reference" />
        <attr name="til_subtitle" format="string|reference" />
        <attr name="til_subtitle_color" format="color|reference" />
        <attr name="til_title_in_middle" format="boolean" />
        <attr name="til_show_arrow" format="boolean" />
        <attr name="til_show_bottom_line" format="boolean" />
        <attr name="til_bottom_line_align_title" format="boolean" />
        <attr name="til_bottom_line_height" format="dimension|reference" />
        <attr name="til_bottom_line_color" format="color|reference" />
    </declare-styleable>

</resources>