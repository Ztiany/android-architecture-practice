<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sel_selectable_item_white_bg"
    android:clickable="true"
    tools:ignore="KeyboardInaccessibleWidget"
    tools:paddingEnd="@dimen/common_edge"
    tools:paddingStart="@dimen/common_edge">

    <TextView
        android:id="@+id/tvWidgetAvatarItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="@dimen/text_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="消息通知" />

    <ImageView
        android:id="@+id/ivWidgetAvatarItemArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow_right_gray"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/ivWidgetItemAvatar"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginEnd="@dimen/common_edge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivWidgetAvatarItemArrow"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@color/red" />

</androidx.constraintlayout.widget.ConstraintLayout>