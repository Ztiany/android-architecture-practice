<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/sample_fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/sample_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sample_shape_navigation_view_bg"
        android:fitsSystemWindows="true"
        app:itemIconSize="22dp"
        app:itemTextAppearanceActive="@style/Sample.Table.TextAppearance.Selected"
        app:itemTextAppearanceInactive="@style/Sample.Table.TextAppearance.Normal"
        app:itemTextColor="@color/sample_color_tab_text"
        app:menu="@menu/sample_table" />

</LinearLayout>