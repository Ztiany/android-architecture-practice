<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/fl_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/red"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Circle" />

    </FrameLayout>

    <com.android.base.ui.drawable.DTextView
        android:id="@+id/tv_login"
        style="@style/Widget.App.Button.Wrap.DView.PrimaryGradientRounded10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:includeFontPadding="false"
        android:paddingHorizontal="15dp"
        android:paddingVertical="6dp"
        android:text="立即登录"
        app:layout_constraintLeft_toRightOf="@+id/fl_avatar"
        app:layout_constraintTop_toTopOf="@+id/fl_avatar" />

    <TextView
        android:id="@+id/tv_login_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:includeFontPadding="false"
        android:text="登录开启安卓学习之旅"
        android:textColor="?app_color_text_level2"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/fl_avatar"
        app:layout_constraintLeft_toRightOf="@+id/fl_avatar" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_login_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="tv_login,tv_login_desc" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="?app_color_deepest"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fl_avatar"
        app:layout_constraintLeft_toRightOf="@id/fl_avatar"
        app:layout_constraintTop_toTopOf="@id/fl_avatar"
        tools:text="130***902" />

    <com.android.base.ui.shape.ShapeableLinearLayout
        android:id="@+id/ll_entrances"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/fl_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>