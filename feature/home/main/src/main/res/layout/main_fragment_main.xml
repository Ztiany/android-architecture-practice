<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/flMainContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/mainBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?app_color_lightest"
        android:fitsSystemWindows="true"
        app:itemIconSize="22dp"
        app:itemTextAppearanceActive="@style/MainTableTextAppearanceSelected"
        app:itemTextAppearanceInactive="@style/MainTableTextAppearanceNormal"
        app:itemTextColor="@color/main_color_tab_text"
        app:menu="@menu/main_table"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.TopRounded20" />

</LinearLayout>